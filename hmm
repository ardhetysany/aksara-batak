  const track = document.querySelector('.carousel-track');
  const slides = document.querySelectorAll('.carousel-slide');
  const prevBtn = document.getElementById('prev');
  const nextBtn = document.getElementById('next');
  let currentIndex = 0;

  function updateTrackHeight() {
    if (!track || slides.length === 0) return;
    const activeSlide = slides[currentIndex];
    requestAnimationFrame(() => {
      track.style.height = activeSlide.offsetHeight + 'px';
    });
  }

  function updateCarousel() {
    track.style.transform = `translateX(-${currentIndex * 100}%)`;
    updateTrackHeight();
    reobserveSlide();
  }

  prevBtn?.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + slides.length) % slides.length;
    updateCarousel();
  });

  nextBtn?.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % slides.length;
    updateCarousel();
  });

document.querySelectorAll('.expandable').forEach(expandable => {
  const toggleBtn = expandable.querySelector('.toggle-btn');
  if (toggleBtn) {
    toggleBtn.addEventListener('click', () => {
      expandable.classList.toggle('expanded');
      toggleBtn.textContent = expandable.classList.contains('expanded')
        ? 'keyboard_arrow_up'
        : 'keyboard_arrow_down';
    });
  }
});

  const resizeObserver = new ResizeObserver(() => updateTrackHeight());
  if (slides.length > 0) resizeObserver.observe(slides[currentIndex]);

  function reobserveSlide() {
    resizeObserver.disconnect();
    resizeObserver.observe(slides[currentIndex]);
  }

  setTimeout(updateTrackHeight, 500);